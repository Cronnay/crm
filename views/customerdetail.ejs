<% include includes/header  %>
<div class="container">
    <div class="row" id="kunder"> 
        <div class="col-xs-12">
            <div class="row">
                <div class="col-sm-8 col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="media">
                                <h3 class="underline-title"><%= custdetail.foretagsnamn %></h3>
                            </div>
                            <div class="row">
                                <div class="col-sm-7">
                                    <h4>Besöksadress</h4>
                                    <p><%= custdetail.adress %>
                                </div>
                                <div class="col-sm-5">
                                    <h4>Orgnr</h4>
                                    <p><%= custdetail.orgid %>
                                </div>
                            </div>
                            <div class="row"></div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-lg-6">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <h4 class="underline-title">Skapad</h4>
                                    <div></div>
                                    <h3><%= moment(custdetail.skapad).format('DD-MM-YYYY') %></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h4 class="underline-title">Anteckningar</h4>
                            <form action="/customer/<%= custdetail._id %>" method="post">
                                <div class="row">
                                    <div class="col-sm-10">
                                        <div class="form-group">
                                            <input type="hidden" value="<%= currentUser.name %>" name="note[skapare]">
                                            <textarea name="note[text]" placeholder="Skriv en anteckning här" class="form-control" style="resize: none"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <button class="btn btn-primary form-control" style="margin-top: 10%;">Skicka in</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!-- Anteckningar här -->
                            <% custdetail.anteckningar.forEach(function(notes){  %>
                                <div class="well well-sm">
                                    <div class="row">
                                        <div class="col-xs-8">
                                            <p class="note-author"><%= notes.skapare %> </p>
                                        </div>
                                        <div class="col-xs-4">
                                            <p class="pull-right"><%= moment(notes.tid).format("DD-MM-YYYY HH:MM")%></p>
                                        </div>
                                        <div class="col-xs-12">
                                            <p class="note-text"><%= notes.text %></p>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<% include includes/footer %>
<!-- custdetail -->